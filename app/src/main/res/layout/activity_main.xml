<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:layout_marginTop="-50dp"
        android:background="#6221D5"
        android:backgroundTint="#651FFF"
        app:cardCornerRadius="50dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:layout_marginTop="80dp"
            app:srcCompat="@mipmap/fc" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="285dp"
            android:gravity="center"
            android:text="RECONOCIMIENTO FACIAL"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#FF6D00"
            android:gravity="center"
            android:paddingLeft="50dp"
            android:paddingEnd="50dp"
            android:text="Login"
            android:textAlignment="textStart"
            android:textAllCaps="true"
            android:textSize="15dp"
            app:icon="@mipmap/login"
            app:iconGravity="end|textStart"
            app:iconSize="25dp" />

        <Button
            android:id="@+id/btn_add"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#64DD17"
            android:paddingLeft="50dp"
            android:paddingEnd="50dp"
            android:text="NUEVO USUARIO"
            android:textAlignment="textStart"
            android:textAllCaps="true"
            android:textSize="15dp"
            app:icon="@mipmap/usuario"
            app:iconGravity="end"
            app:iconSize="25dp" />

        <Button
            android:id="@+id/btn_ob"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#304FFE"
            android:paddingLeft="50dp"
            android:paddingEnd="50dp"
            android:text="EMOCIONES"
            android:textAlignment="textStart"
            android:textAllCaps="true"
            android:textSize="15dp"
            app:icon="@mipmap/representacion"
            app:iconGravity="end"
            app:iconSize="25dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:text="Rosales J_2024-10"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:text="v 0.0.1"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>